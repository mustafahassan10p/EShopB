@model EShopCoreBRazorApp.Pages.Product.CreateModel
@{
}

<h1>
    Create New Product
</h1>
<form method="post">
    <table class="table">
            <tbody>
                <tr>
                    <td><label asp-for="products.ProductName"></label></td>
                    <td><input asp-for="products.ProductName" /></td>
                </tr>
                <tr>
                    <td><label asp-for="products.Qty"></label></td>
                    <td><input asp-for="products.Qty" /></td>
                </tr>
                <tr>
                    <td><label asp-for="products.Price"></label></td>
                    <td><input asp-for="products.Price" /></td>
                </tr>
                <tr>
                    <td><label asp-for="products.CreatedDateTime"></label></td>
                    <td><input asp-for="products.CreatedDateTime" /></td>
                </tr>
                <tr>
                    <td>
